{
  "info": {
    "name": "Express JWT Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"123456\",\n  \"name\": \"User\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["register"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.environment.set('token', pm.response.json().token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Me",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/me",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["me"]
        }
      }
    },
    {
      "name": "Verify Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{token}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/verify-token",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["verify-token"]
        }
      }
    },
    {
      "name": "Protected",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/protected",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["protected"]
        }
      }
    }
  ]
}


